# ===========================================
# MEME BOT CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ===========================================
# WALLET CONFIGURATION
# ===========================================
# Your Solana wallet private key (base58 or base64 encoded)
# Generate a new wallet or use an existing one
# WARNING: Keep this secure! Anyone with this key can access your funds
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Optional: Your wallet public key (will be derived from private key if not provided)
WALLET_PUBLIC_KEY=your_wallet_public_key_here

# ===========================================
# TRADING CONFIGURATION
# ===========================================
# Amount of SOL to use per trade (in SOL, not lamports)
TRADE_AMOUNT=0.01

# Maximum slippage tolerance (as percentage, e.g., 5 for 5%)
MAX_SLIPPAGE=5

# Minimum liquidity required for a token (in SOL)
MIN_LIQUIDITY=10

# Minimum volume required for a token (in SOL)
MIN_VOLUME=5

# Take profit percentage (e.g., 50 for 50% profit)
TAKE_PROFIT=50

# Stop loss percentage (e.g., 20 for 20% loss)
STOP_LOSS=20

# Maximum position size (in SOL)
MAX_POSITION_SIZE=1.0

# Maximum risk per trade (as percentage of wallet)
MAX_RISK_PER_TRADE=5

# ===========================================
# API CONFIGURATION
# ===========================================
# Helius API key for Solana RPC access
# Get your free API key at: https://helius.xyz/
HELIUS_API_KEY=your_helius_api_key_here

# Jupiter API key (optional, for higher rate limits)
# Get your API key at: https://jup.ag/
JUPITER_API_KEY=your_jupiter_api_key_here

# ===========================================
# TELEGRAM NOTIFICATIONS
# ===========================================
# Telegram bot token for notifications
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram chat ID where notifications will be sent
# Get your chat ID by messaging @userinfobot
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===========================================
# LOGGING AND MONITORING
# ===========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed trading logs
ENABLE_TRADE_LOGS=true

# Enable performance metrics
ENABLE_METRICS=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to 'development' for testing, 'production' for live trading
NODE_ENV=development

# Enable debug mode (shows more detailed logs)
DEBUG=false

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Never share your .env file or commit it to version control
# 2. Use a dedicated trading wallet with limited funds
# 3. Regularly rotate your API keys
# 4. Monitor your wallet for unauthorized transactions
# 5. Keep your private keys secure and backed up safely
