# Solana Configuration
SOLANA_RPC_ENDPOINT=https://rpc.helius.xyz/?api-key=${HELIUS_API_KEY}

# Helius API Configuration
HELIUS_API_KEY=your_helius_api_key_here

# Wallet Configuration
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Risk Management
MAX_POSITION_SIZE=1.0                    # Maximum position size in SOL
MAX_DAILY_LOSS=5.0                       # Maximum daily loss in SOL
MAX_LOSS_PERCENT=2.0                     # Maximum loss percentage per trade
MIN_PROFIT_PERCENT=1.5                   # Minimum profit percentage to take
MAX_CONCURRENT_TRADES=5                  # Maximum number of concurrent trades

# Trade Parameters
MIN_LIQUIDITY=100                        # Minimum liquidity requirement in SOL
MAX_SLIPPAGE=1.0                         # Maximum allowed slippage percentage
MAX_HOLD_TIME_MS=150000                  # Maximum time to hold a position in milliseconds
TRADE_AMOUNT_SOL=0.1                     # Amount of SOL to trade with

# Bot Configuration
ENABLE_AUTO_TRADE=true                   # Enable/disable automatic trading
DEBUG_MODE=false                         # Enable/disable debug logging
DATA_DIR=src/data                        # Directory for data storage

# Timing Parameters
CHECK_INTERVAL_MS=10000                  # Interval between checks in milliseconds
MAX_NO_OPPORTUNITY_COUNT=5               # Maximum number of checks without finding opportunities
WAIT_PERIOD_MS=60000                     # Wait period after no opportunities found
MIN_TIME_BETWEEN_TRADES_MS=300000        # Minimum time between trades
MIN_SAFETY_SCORE=0.6                     # Minimum safety score for tokens
RUNTIME_DURATION_MS=3600000              # Maximum runtime duration in milliseconds 